<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/layout_linear"
    tools:ignore="UseCompoundDrawables"
    android:background="#AAAAAA">

    <!-- using id in linear layout for onclick of item in recycler view ..go
    to recycleradapter to see it's uses-->


    <!--here in upper linear layout height should not be match parent
     otherwise other data wont be shown...if error
     while compiling remove this comment-->


    <ImageView
        android:id="@+id/img_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="15dp"
        android:src="@drawable/colornotes" />



    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/app_name"
        android:id="@+id/capital_id"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_weight="1"

        />


</LinearLayout>